<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8071D2"
    android:id="@+id/timer">
    <!-- Timer Input Fields -->

    <TextView
        android:id="@+id/textViewTimerDisplay"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimerTop" />

    <LinearLayout
        android:id="@+id/timerInputFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimerDisplay">

        <EditText
            android:id="@+id/editTextHours"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:hint="HH"
            android:inputType="number"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextMinutes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:hint="MM"
            android:inputType="number"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTexttSeconds"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#020202"
            android:gravity="center"
            android:hint="SS"
            android:inputType="number"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Timer Control Buttons -->

    <Button
        android:id="@+id/buttonStartTimer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:onClick="startTimer"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimerDisplay" />

    <Button
        android:id="@+id/buttonPauseTimer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:onClick="pauseTimer"
        android:text="Pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimerDisplay" />

    <Button
        android:id="@+id/buttonResetTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:onClick="resetTimer"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/Layout"
        app:layout_constraintEnd_toStartOf="@+id/buttonPauseTimer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonStartTimer"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimerDisplay" />

    <!-- Title for Timer -->
    <TextView
        android:id="@+id/textViewTimerTop"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#330072"
        android:gravity="center"
        android:text="Timer"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom bar layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Layout"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:background="#000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/buttonStopwatch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="Stopwatch"
            app:icon="@drawable/stopwatch_image"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewStopwatch"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Stopwatch"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonStopwatch"
            app:layout_constraintStart_toStartOf="@+id/buttonStopwatch"
            app:layout_constraintTop_toBottomOf="@+id/buttonStopwatch" />

        <Button
            android:id="@+id/buttonTimer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#9C27B0"
            app:icon="@drawable/timer_image"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Timer"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonTimer"
            app:layout_constraintStart_toStartOf="@+id/buttonTimer"
            app:layout_constraintTop_toBottomOf="@+id/buttonTimer" />

        <Button
            android:id="@+id/buttonClock"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="WorldClock"
            app:icon="@drawable/world_clock_image"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewWorldClock"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="World Clock"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonClock"
            app:layout_constraintStart_toStartOf="@+id/buttonClock"
            app:layout_constraintTop_toBottomOf="@+id/buttonClock" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
